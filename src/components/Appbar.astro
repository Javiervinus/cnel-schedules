---
import { Github } from "lucide-react";
import { ModeToggle } from "./ModeToggle";
import { Button } from "./ui/button";
---

<header
  class="sticky top-0 z-50 w-full border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div class="container flex h-14 max-w-screen-xl mx-auto items-center px-6">
    <h1 class="text-3xl font-medium text-center">
      Horarios <span class="text-[#2364B0]">CNEL</span>
    </h1>
    <div class="ml-auto flex gap-1">
      <Button variant="outline" size="icon">
        <a
          href="https://github.com/Javiervinus/cnel-schedules"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Github />
        </a>
      </Button>
      <ModeToggle client:load />
    </div>
  </div>
</header>
